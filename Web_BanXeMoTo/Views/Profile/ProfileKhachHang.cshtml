@using Microsoft.AspNetCore.Http;
@model Web_BanXeMoTo.Models.KhachHang

@{ ViewData["Title"] = "IndexProfile";
    Layout = null; }
<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta http-equiv="Content-Language" content="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Profile </title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, shrink-to-fit=no" />
    <meta name="description" content="This is an example dashboard created using build-in elements and components.">
    <meta name="msapplication-tap-highlight" content="no">

    <link href="~/css/main.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
</head>
<body>
    <div class="app-container app-theme-white body-tabs-shadow fixed-sidebar fixed-header">
        <div class="app-header header-shadow">
            <div class="app-header__logo">
                <div class="logo-src"></div>
                <div class="header__pane ml-auto">
                    <div>
                        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="app-header__mobile-menu">
                <div>
                    <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="app-header__menu">
                <span>
                    <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                        <span class="btn-icon-wrapper">
                            <i class="fa fa-ellipsis-v fa-w-6"></i>
                        </span>
                    </button>
                </span>
            </div>
            <div class="app-header__content">
                <div class="app-header-left">
                    <div class="search-wrapper">
                        <div class="input-holder">
                            <input type="text" class="search-input" placeholder="Type to search">
                            <button class="search-icon"><span></span></button>
                        </div>
                        <button class="close"></button>
                    </div>
                    <ul class="header-menu nav">
                        <li class="nav-item">
                            <a href="javascript:void(0);" class="nav-link">
                                <img class="avt" src="@("/img/"+Web_BanXeMoTo.Models.StaticAcc.Avatar)" />
                            </a>
                        </li>
                        <li class="btn-group nav-item">
                            <a id="name" href="javascript:void(0);" class="nav-link">
                                @Web_BanXeMoTo.Models.StaticAcc.Name
                            </a>
                            <a class="nav-link">:</a>
                        </li>
                        <li class="btn-group  nav-item">
                            <a id="role" href="javascript:void(0);" class="nav-link">
                                @Context.Session.GetString("email")
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="app-main">
            <div class="app-sidebar sidebar-shadow margin-menu">

                <div class="app-header__mobile-menu">
                    <div>
                        <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
                <div class="app-header__menu">
                    <span>
                        <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                            <span class="btn-icon-wrapper">
                                <i class="fa fa-ellipsis-v fa-w-6"></i>
                            </span>
                        </button>
                    </span>
                </div>
                <div class="scrollbar-sidebar">
                    <div class="app-sidebar__inner">
                        <ul class="vertical-nav-menu">

                            <li class="app-sidebar__heading">Thông tin cá nhân </li>
                            <li>
                                @Html.ActionLink("Trang chủ", "Products", "Products")
                            </li>
                            <li>
                                @Html.ActionLink("Thông tin cá nhân ", "ProfileKhachHang", "Profile")
                            </li>
                            <li>
                                @Html.ActionLink("Đăng xuất", "Logout", "Login")
                            </li>
                            <li>
                                @Html.ActionLink("Lịch sử đặt lịch", "BookingList", "Booking")
                            </li>
                            <li>
                                @Html.ActionLink("Lịch sử mua hàng", "History", "Booking")
                            </li>

                        </ul>
                    </div>
                </div>
            </div>

            <div class="app-main__outer">
                <div class="row">
                    <div class="col-md-12">
                        <div class="main-card mb-3 card">
                            <div class="card-body">
                                <form asp-action="ProfileKhachHang" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <div class="card-img ">
                                            @*<img src="@(Model.nhanVien != null? Url.Content("/img"+Model.nhanVien.Avt) :"/img/icon.png")" height="200" width="200" id="previewImg" style="margin-left: auto; width: 100%; margin-right: auto; max-width: 240px; display: block;" />*@
                                            <img src="@("/img/"+Model.Avatar)" id="output" height="200" width="200" style="margin: auto;display: block;border-radius: 50%;">
                                        </div>

                                    </div>

                                    <input asp-for="Idkh" class="" readonly hidden />

                                    <div class="form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <div class="col-md-12">
                                            <input asp-for="Email" class="form-control" readonly />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <label asp-for="TenKh" class="control-label"></label>
                                        <div class="col-md-12">
                                            <input asp-for="TenKh" class="form-control" />
                                            <span asp-validation-for="TenKh" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="DienThoai" class="control-label"></label>
                                        <div class="col-md-12">
                                            <input asp-for="DienThoai" class="form-control" />
                                            <span asp-validation-for="DienThoai" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="DiaChi" class="control-label"></label>
                                        <div class="col-md-12">
                                            <input asp-for="DiaChi" class="form-control" />
                                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="UploadHinh" accept="image/*" onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])" />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Pass" class="control-label"></label>
                                        <div class="col-md-12">
                                            <input name="Pass" type="password" class="form-control" placeholder="Điền mật khẩu để thay đổi thông tin" />
                                            <span asp-validation-for="Pass" class="text-danger"></span>
                                            <span class="text-danger">@ViewBag.ErrorPass</span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" value="Lưu" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>
    </div>
    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>

    <script type="text/javascript" src="~/js/main.js"></script>

</body>


