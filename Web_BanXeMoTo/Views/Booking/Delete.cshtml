<h3>Are you sure you want to Hủy Lịch Hẹn ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
    </dl>

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.datLich.NgayDat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.datLich.NgayDat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.datLich.XacNhan)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.datLich.XacNhan)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.khachHang.TenKh)
        </dt>
        <dd class="col-sm-10">
            @foreach (var kh in Model.ListKhachHang)
            {
                if (kh.Idkh == Model.datLich.Idkh)
                {
                    @Html.DisplayFor(model => kh.TenKh)
                }
            }

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.mauXe.TenXe)
        </dt>
        <dd class="col-sm-10">
            @foreach (var mau in Model.ListMauXe)
            {
                if (Model.datLich.Idmau == mau.Idmau)
                {
                    @Html.DisplayFor(modelItem => mau.TenXe)
                }
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.datLich.GhiChu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.datLich.GhiChu)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Hủy lịch" class="btn btn-sm btn-danger" /> |
        <a asp-action="BookingList">Trở về</a>
    </form>
</div>
